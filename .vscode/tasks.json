{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Reset Device",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/stlink.cfg",
                "-c", "adapter speed 4000",
                "-f", "target/stm32f1x.cfg",
                "-c", "init; reset; exit"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Flash with OpenOCD",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/stlink.cfg",//切换daplink cmsis-dap.cfg stlink.cfg
                "-c", "adapter speed 1000", // 添加速度设置
                "-f", "target/stm32f1x.cfg",
                "-c", "program build/Debug/${workspaceFolderBasename}.elf verify reset exit"
            ],
            "group": "build"
        }
        
    ]
}

        